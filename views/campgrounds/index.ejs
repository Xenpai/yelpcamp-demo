
<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campground from all over the world!</p>
        <a href="/campgrounds/new" class="btn btn-lg btn-primary">Add New Campground</a>
    </header>

    <div class="row">
        <% campgrounds.forEach(function(elem) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= elem.image %>">
                    <div class="caption">
                        <h4><%= elem.name %></h4>
                    </div>
                    <p>
                    <a href="/campgrounds/<%= elem._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
