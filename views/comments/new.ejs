<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Add a comment to <%= campground.name %></h1>

    <div style="width: 30%; margin: 25px auto;">
        <form class="form" action="/campgrounds/<%= campground._id %>/comments" method="post">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" placeholder="Add a comment..."></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <% include ../partials/footer %>
    </div>
</div>
